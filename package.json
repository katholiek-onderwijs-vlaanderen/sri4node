{
  "name": "sri4node",
  "description": "An implementation of SRI (Standard ROA Interface) on Node.js.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "//start": "node index.js",
    "prepare": "npm run build",
    "prebuild": "npm run clean",
    "build": "tsc --project .",
    "postbuild": "cp -r ./js/docs ./dist/js",
    "clean": "rm -rf ./dist",
    "pretest": "npm run clean && mkdir -p ./dist/js && npm run postbuild",
    "test": "./node_modules/kov-docker-utils/kov-docker-utils postgres start sri4node_postgresdbfortests 15432 ./docker/postgres_initdb && ./node_modules/.bin/mocha --exit --require ts-node/register ./test/tests.ts; R=$?; ./node_modules/kov-docker-utils/kov-docker-utils postgres stop sri4node_postgresdbfortests; exit $R",
    "testcleanup": "./node_modules/kov-docker-utils/kov-docker-utils postgres cleanup sri4node_postgresdbfortests",
    "test_performance": "mocha --config .mocharc_performance.js --exit",
    "test_common": "./node_modules/.bin/mocha --exit --require ts-node/register ./test/tests.ts --pick $(cd ./test && find ./common -iname '*')",
    "createdb": "./createdb.sh",
    "lint": "eslint sri4node.ts ts test",
    "dev": "env $(cat .env) nodemon --debug --watch ./js js/server.ts"
  },
  "dependencies": {
    "JSONStream": "^1.3.5",
    "ajv": "^8.1.0",
    "ajv-formats": "^2.0.2",
    "body-parser": "^1.19.0",
    "busboy": "0.3.1",
    "compression": "^1.7.4",
    "emitter-queue": "^1.0.0",
    "express": "4.17.2",
    "express-http-context": "^1.2.3",
    "express-middleware-timer": "^0.2.2",
    "fast-json-patch": "^3.0.0-1",
    "json-schema": "^0.4.0",
    "json-stream-stringify": "^2.0.4",
    "lodash": "^4.17.20",
    "p-each-series": "^2.1.0",
    "p-event": "4.2.0",
    "p-filter": "^2.1.0",
    "p-finally": "2.0.1",
    "p-map": "4.0.0",
    "p-settle": "4.1.1",
    "peggy": "^1.2.0",
    "pg-monitor": "^1.4.0",
    "pg-promise": "10.10.2",
    "pug": "^3.0.0",
    "route-parser": "0.0.5",
    "shortid": "^2.2.15",
    "uuid": "8.1.0"
  },
  "devDependencies": {
    "@kathondvla/sri-client": "https://github.com/katholiek-onderwijs-vlaanderen/sri-client.git#sprint-220-0",
