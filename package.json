    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/express-busboy": "^8.0.0",
    "@types/json-schema": "^7.0.9",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.0",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "await-sleep": "0.0.1",
    "chai": "^4.3.4",
    "dev-null": "^0.1.1",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "expect.js": "^0.3.1",
    "iso-datestring-validator": "2.1.4",
    "kov-docker-utils": "git+https://github.com/katholiek-onderwijs-vlaanderen/kov-docker-utils.git",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.19",
    "sinon": "^14.0.0",
    "stream-equal": "2.0.0",
    "test-console": "^1.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "undici": "^4.11.0"
  },
  "repository": {
    "type": "git",
